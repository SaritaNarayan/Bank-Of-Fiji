    <script>
      $(document).ready(function () {
            var customerId =  @Session["CustomerId"]
               // alert(customerId)
                $.getJSON('@Url.Content("~/BoFCustomer/GetCustomerAccount")', { id: customerId }, function (FacilityData) {
                    //alert("Customer")
                    $(function () {
